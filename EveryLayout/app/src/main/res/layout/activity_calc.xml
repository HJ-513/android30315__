<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity"
    android:stretchColumns="*"
    >

    <TableRow>
        <Button android:text="1" style="@style/my_Calc"/>
        <Button android:text="2" style="@style/my_Calc"/>
        <Button android:text="3" style="@style/my_Calc"/>
        <Button android:text="+" style="@style/my_Calc"/>
    </TableRow>

    <TableRow>
        <Button android:text="4" style="@style/my_Calc"/>
        <Button android:text="5" style="@style/my_Calc"/>
        <Button android:text="6" style="@style/my_Calc"/>
        <Button android:text="-" style="@style/my_Calc"/>
    </TableRow>

    <TableRow>
        <Button android:text="7" style="@style/my_Calc"/>
        <Button android:text="8" style="@style/my_Calc"/>
        <Button android:text="9" style="@style/my_Calc"/>
        <Button android:text="x" style="@style/my_Calc"/>
    </TableRow>

    <TableRow>
        <Button android:text="0" style="@style/my_Calc"/>
        <Button android:text="clear"
            android:layout_span="2"
            style="@style/my_Calc"/>
        <Button android:text="/" style="@style/my_Calc"/>
    </TableRow>

</TableLayout>