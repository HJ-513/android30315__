<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EveryLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#865DFF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_name">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
    </style>

<!--숫자스타일-->
    <style name="my_number">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#3949AB</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--    계산기 스타일-->
    <style name="my_Calc">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:backgroundTint">#DDD</item>
        <item name="android:height">90dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>